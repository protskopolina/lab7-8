<Window x:Class="CandidateApp.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кандидат" Width="400" Height="450">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">

            <TextBlock Text="ПІП:"/>
            <TextBox Margin="0 5"
                     Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Дата народження:"/>
            <DatePicker Margin="0 5"
                        SelectedDate="{Binding BirthDate}" />

            <TextBlock Text="Освіта:"/>
            <ComboBox 
               
                Margin="0 5"
                      SelectedItem="{Binding Education}">
                <ComboBoxItem Content="Середня"/>
                <ComboBoxItem Content="Середня спеціальна"/>
                <ComboBoxItem Content="Вища"/>
            </ComboBox>

            <CheckBox Content="Англійська"
                      IsChecked="{Binding KnowsEnglish}" />

            <ComboBox Margin="0 5"
                      SelectedItem="{Binding EnglishLevel}">
                <ComboBoxItem Content="Вільно"/>
                <ComboBoxItem Content="Читаю зі словником"/>
            </ComboBox>

            <CheckBox Content="Володіння комп'ютером"
                      IsChecked="{Binding ComputerSkills}" />

            <TextBlock Text="Стаж (років):"/>
            <TextBox Margin="0 5"
                     Text="{Binding WorkExperience}"
                     PreviewTextInput="NumberOnly"/>

            <CheckBox Content="Є рекомендації"
                      IsChecked="{Binding HasRecommendations}" />

            <Button Background="Orange" 
                Content="Зберегти" Margin="0 10"
                    HorizontalAlignment="Center"
                    Width="120"
                    Click="Save_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
